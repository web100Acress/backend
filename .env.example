# ===================================
# Server Configuration
# ===================================
NODE_ENV=development
PORT=3500
FRONTEND_URL=http://localhost:3000
COOKIE_DOMAIN=localhost
SESSION_SECRET=your-session-secret

# ===================================
# Database Configuration
# ===================================
MONGODB_URI=mongodb://localhost:27017/100acress
REDIS_URL=redis://localhost:6379  # Optional, for session store

# ===================================
# JWT Configuration
# ===================================
JWT_SECRET=your-jwt-secret-key-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# ===================================
# OAuth Providers
# ===================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3500/api/auth/google/callback

# ===================================
# Email Configuration
# ===================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false  # true for 465, false for other ports
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=100Acress <noreply@100acress.com>
SMTP_DEBUG=false

# ===================================
# AWS Configuration (Optional)
# ===================================
AWS_REGION=ap-south-1
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_ACCESS_KEY=your-aws-access-key
AWS_S3_SECRET_ACCESS_KEY=your-aws-secret-key

# ===================================
# Security
# ===================================
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per window
CORS_ORIGIN=http://localhost:3000,https://100acress.com

# ===================================
# Feature Flags
# ===================================
ENABLE_RATE_LIMITING=true
ENABLE_MAINTENANCE_MODE=false

# ===================================
# Logging
# ===================================
LOG_LEVEL=info  # error, warn, info, debug
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
